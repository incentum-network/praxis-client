{
    "name": "@incentum/praxis-client",
    "description": "Praxis Client for Ark",
    "version": "0.0.33",
    "contributors": [
        "Your Name <billd@incentum.network>"
    ],
    "license": "MIT",
    "main": "dist/index.js",
    "scripts": {
        "prepublishOnly": "yarn build",
        "pretest": "yarn build",
        "compile": "tsc",
        "build": "yarn clean && yarn compile",
        "build:watch": "yarn clean && yarn compile -w",
        "clean": "del dist",
        "docs": "../../node_modules/typedoc/bin/typedoc src --out docs",
        "lint": "../../node_modules/tslint/bin/tslint -c ./tslint.json 'src/**/*.ts' '__tests__/**/*.ts' --fix",
        "test": "cross-env CORE_ENV=test jest --runInBand --forceExit",
        "test:clients": "cross-env CORE_ENV=test jest ./__tests__/client",
        "test:coverage": "cross-env CORE_ENV=test jest --coverage --coveragePathIgnorePatterns='/(defaults.ts|index.ts)$' --runInBand --forceExit",
        "test:debug": "cross-env CORE_ENV=test node --inspect-brk ../../node_modules/.bin/jest --runInBand",
        "test:watch": "cross-env CORE_ENV=test jest --runInBand --watch",
        "test:watch:all": "cross-env CORE_ENV=test jest --runInBand --watchAll",
        "updates": "../../node_modules/npm-check-updates/bin/npm-check-updates -a"
    },
    "dependencies": {
        "@incentum/crypto": "^2.4.3",
        "@incentum/praxis-interfaces": "^1.0.352",
        "axios": "^0.19.0",
        "bytebuffer": "^5.0.1"
    },
    "devDependencies": {
        "@sindresorhus/tsconfig": "^0.1.1",
        "@types/jest": "^23.3.10",
        "@types/node": "^10.12.17",
        "tslint": "^5.12.0",
        "tslint-config-prettier": "^1.17.0",
        "typescript": "^3.2.4",
        "typedoc": "^0.13.0",
        "ts-jest": "^23.10.5",
        "jest": "^23.6.0",
        "jest-extended": "^0.11.0",
        "regenerator-runtime": "^0.11.1",
        "npm-check-updates": "^3.1.0",
        "cross-env": "^5.2.0",
        "del-cli": "^1.1.0"
    },
    "jest": {
        "testEnvironment": "node",
        "bail": true,
        "verbose": true,
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testMatch": [
            "**/*.test.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "collectCoverage": false,
        "coverageDirectory": "<rootDir>/.coverage",
        "collectCoverageFrom": [
            "packages/**/src/**/*.ts",
            "!**/node_modules/**"
        ],
        "coverageReporters": [
            "json",
            "lcov",
            "text",
            "clover",
            "html"
        ],
        "watchman": false,
        "setupFilesAfterEnv": [
            "jest-extended"
        ]
    }
}
